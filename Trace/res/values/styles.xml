<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:Theme"></style>

    <style name="Theme.D1" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.tranlucent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleBarOperation">
        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">32dip</item>
    </style>

    <style name="NavPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="MMBriefText">
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:textColor">#ff707070</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#a0ffffff</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:lineSpacingExtra">2.0dip</item>
    </style>

    <style name="TitleBarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize"> 19.0dip </item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#ff888888</item>
    </style>

    <style name="DashboardItemImg">
        <item name="android:layout_width">108dip</item>
        <item name="android:layout_height">108dip</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="DashboardItemText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize"> 18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="SingleTableContentText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SingleTableColumnText">
        <item name="android:textColor">@color/black_50_transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SingleTableNameText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mmdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/mm_trans</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:background">@drawable/mm_trans</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="MMEditText">
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">43.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MMBody">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">18.0dip</item>
        <item name="android:paddingTop">26.0dip</item>
        <item name="android:paddingRight">18.0dip</item>
        <item name="android:paddingBottom">18.0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="MMLabelSplit">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">10.0dip</item>
    </style>

    <style name="MMButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/mm_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <style name="MMLineButton" parent="@style/MMButton">
        <item name="android:textSize">@dimen/TitleTextSize</item>
        <item name="android:textColor">@color/mm_style_two_btn_text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMLineActionButton" parent="@style/MMLineButton">
        <item name="android:textColor">@color/mm_style_one_btn_text</item>
        <item name="android:background">@drawable/btn_style_one</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Customspinner" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/popupbox_select_bg</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ding_manager_item_button_second_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffa6a6a6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">13.299988dip</item>
        <item name="android:maxWidth">156.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>