<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_edit"
        android:gravity="center_vertical"
        android:hint="请输入所要查询的20位条码"
        android:inputType="number|textImeMultiLine"

        android:maxLength="20" />

    <ImageButton
        android:id="@+id/ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/code"
        android:layout_alignRight="@+id/code"
        android:layout_alignTop="@+id/code"
        android:layout_marginRight="5dp"
        android:background="#00000000"
        android:src="@drawable/search_clear_normal"
        android:visibility="gone" />

</RelativeLayout>